{
  "id": "modules.bgjobs",
  "version": "0.1.0",
  "domain": "modules",
  "description": "Example module demonstrating safe background job processing with persistence",
  "dependencies": [
    "modules.base",
    "modules.config",
    "runtime.state",
    "infra.logging",
    "core.raise_af",
    "runtime.api"
  ],
  "capabilities": {
    "gui": true,
    "health": true,
    "background_workers": true
